<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-cascade="all" 
                   package="com.bpm4sb.process.domain.model.participant">
  <class lazy="true" name="OrganizationalEntity" table="ORGANIZATIONALENTITY">
    <composite-id class="OrganizationalEntityId" name="id">
        <key-many-to-one name="participant" column="PARTICIPANT_ID" foreign-key="ID" class="Participant"/>
        <key-property name="identityName" column="IDENTITYREF"/>
    </composite-id>
    <property name="identityType" column="IDENTITYTYPE" access="property">
        <type name="org.hibernate.type.EnumType">
            <param name="enumClass">com.bpm4sb.process.domain.model.participant.IdentityType</param>
          </type>
    </property>
  </class>
</hibernate-mapping>
