<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field" default-cascade="all" 
                   package="com.bpm4sb.process.domain.model.participant">
  <class lazy="true" name="Participant" table="PARTICIPANT">
    <id column="ID" name="id" type="java.lang.String"/>
    <property column="TITLE" name="name" type="java.lang.String"/>
    <property column="DESCRIPTION" name="description" type="java.lang.String"/>

    <set name="assigments" table="ORGANIZATIONALENTITY" lazy="false" >
        <key column="PARTICIPANT_ID"/>
        <one-to-many class="OrganizationalEntity" />
    </set>
  </class>
</hibernate-mapping>
